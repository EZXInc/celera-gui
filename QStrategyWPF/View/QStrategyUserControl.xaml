<UserControl x:Class="QStrategyWPF.View.QStrategyUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" xmlns:my="clr-namespace:QStrategyWPF.View.QStrategyUserControls">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MaxHeight="180"/>
            <!--<RowDefinition Height="Auto"/>-->
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <my:SummaryUserControl Grid.Row="0" Margin="5,2,5,2"/>
        <!--<my:ControlPanelUserControl Grid.Row="1" Margin="5,2,5,2"/>-->
        <my:OrderBlotterUserControl Grid.Row="1" Margin="5,2,5,2"/>
        <my:InputTradeUserControl Grid.Row="2" Margin="5,2,5,2" Visibility="Collapsed"/>
        <my:QueryBookUserControl Grid.Row="3" Margin="5,2,5,2" Visibility="Collapsed"/>
    </Grid>
</UserControl>
